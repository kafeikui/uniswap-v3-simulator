{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["./src"]
}
